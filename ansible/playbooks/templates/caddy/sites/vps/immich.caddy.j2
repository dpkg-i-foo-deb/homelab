{{ photos_host }}.{{ internet_host }} {

  @waf {
    import waf_skip_video
    import waf_skip_images
  }

  coraza_waf @waf {
    load_owasp_crs

    directives "
      Include /etc/caddy/waf/core/owasp_coraza.conf
      Include /etc/caddy/waf/core/crs_rules.conf
    "
  }

  import logging immich.log
  import error_handler
  import letsencrypt_cloudflare_dns
  import proxy https://{{ lan_prefix }}.{{ photos_host }}.{{ internet_host }}
}