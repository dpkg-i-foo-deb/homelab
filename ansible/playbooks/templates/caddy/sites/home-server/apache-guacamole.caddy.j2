{{ lan_prefix }}.{{ remote_host }}.{{ internet_host }},
{{ remote_host }}.{{ internet_host }} {

  @waf {
    import waf_skip_websockets
  }

  coraza_waf @waf {
    load_owasp_crs

    directives "
      Include /etc/caddy/waf/core/owasp_coraza.conf
      Include /etc/caddy/waf/rules/guacamole.conf
      Include /etc/caddy/waf/core/crs_rules.conf
    "
  }

  import logging guacamole.log
  import error_handler
  import letsencrypt_cloudflare_dns
  import proxy http://{{ hostvars['homelab_bastion']['ansible_host'] }}:8081
}